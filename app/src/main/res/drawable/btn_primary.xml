<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/blue3B"
                android:endColor="@color/blue3B" />
            <corners android:radius="@dimen/_4ssp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/blue32"
                android:endColor="@color/blue32" />
            <corners android:radius="@dimen/_4ssp"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray97" />
            <corners android:radius="@dimen/_4ssp"/>
        </shape>
    </item>
</selector>
