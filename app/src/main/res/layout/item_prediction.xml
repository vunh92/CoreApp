<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12ssp">

    <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:minHeight="@dimen/_44ssp"
            android:paddingVertical="@dimen/_4ssp"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:textColor="@color/colorGray33"
            android:textSize="14sp"
            tools:ignore="MissingConstraints"
            tools:text="113 Điện biên phủ, Phường Cầu Ông Lãnh, " />
    <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/ic_uncheck"
        tools:ignore="ContentDescription" />
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:layout_below="@+id/tvText"
            android:background="@color/colorGrayE8" />
</RelativeLayout>
