<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_centerInParent="true"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/bg_intro"/>-->
    <RelativeLayout
        android:layout_width="@dimen/_70ssp"
        android:layout_height="@dimen/_70ssp"
        android:visibility="visible"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="@dimen/_70ssp"
            android:layout_height="@dimen/_70ssp"
            android:layout_centerHorizontal="true"
            app:tint="@color/colorPrimary"
            android:src="@drawable/ic_launcher_foreground" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_50ssp"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/colorPrimary"
        tools:text="Phiên bản V10.16.1"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2ssp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20ssp"
        android:layout_marginHorizontal="@dimen/_30ssp"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_splash" />
</RelativeLayout>
